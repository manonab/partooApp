{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": ["es2017"],
        "allowJs": true,
        "jsx": "react-native",
        "declaration": true,
        "sourceMap": true,
        "noEmit": true,
        "isolatedModules": true,
        "strict": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@/components/*": ["app/components/*"],
            "@/hooks/*": ["app/hooks/*"],
            "@/data/*": ["app/data/*"],
            "@/helpers/*": ["app/helpers/*"],
            "@/api/*": ["app/api/*"],
            "@/kommon/*": ["app/kommon/*"],
            "@/assets/*": ["app/assets/*"],
            "@/screens/*": ["app/screens/*"],
            "@/models/*": ["app/models/*"],
            "@/navigation/*": ["app/navigation/*"]
        },
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": false,
        "resolveJsonModule": true
    },
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
    ],
    "extends": "expo/tsconfig.base"
}
